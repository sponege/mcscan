{
  "compilerOptions": {
    /* Module & Target */
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    /* Resolve */
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["src/**/*", "typing/**/*"]
}
